
<%= simple_form_for(@performance) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :season %>
    <%= f.input :club %>
    <%= f.input :country %>
    <%= f.input :competition %>
    <%= f.input :tier %>
    <%= f.input :matches %>
    <%= f.input :goals %>
    <%= f.input :assists %>
    <%= f.input :yellow %>
    <%= f.input :red %>
    <%= f.association :player %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
