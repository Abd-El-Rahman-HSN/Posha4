<p id="notice"><%= notice %></p>

<h1>National Careers</h1>

<table>
  <thead>
    <tr>
      <th>Team</th>
      <th>Matches</th>
      <th>Goals</th>
      <th>Assists</th>
      <th>Yellow</th>
      <th>Red</th>
      <th>Player</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @national_careers.each do |national_career| %>
      <tr>
        <td><%= national_career.team %></td>
        <td><%= national_career.matches %></td>
        <td><%= national_career.goals %></td>
        <td><%= national_career.assists %></td>
        <td><%= national_career.yellow %></td>
        <td><%= national_career.red %></td>
        <td><%= national_career.player %></td>
        <td><%= link_to 'Show', national_career %></td>
        <td><%= link_to 'Edit', edit_national_career_path(national_career) %></td>
        <td><%= link_to 'Destroy', national_career, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

