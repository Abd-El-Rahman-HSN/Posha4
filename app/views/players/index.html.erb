<h1>Players</h1>

<%= form_tag(players_path, method: :get) do %>
  <%= text_field_tag :term, params[:term] %>
  <%= submit_tag 'Search', name: nil %>
<% end %>


<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Number</th>
      <th>Gender</th>
      <th>Photo</th>
      <th>Main position</th>
      <th>Other positions</th>
      <th>Nationality</th>
