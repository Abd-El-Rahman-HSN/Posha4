      <th>Youtube links</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @players.each do |player| %>
      <tr>
        <td><%= player.name %></td>
        <td><%= player.number %></td>
        <td><%= player.gender %></td>
        <td><%= player.photo.url(:thumb) %></td>
        <td><%= player.main_position %></td>
        <td><%= player.other_positions %></td>
        <td><%= player.nationality %></td>
        <td><%= player.second_nationality %></td>
        <td><%= player.born %></td>
        <td><%= player.height %></td>
        <td><%= player.foot %></td>
        <td><%= player.current_club %></td>
        <td><%= player.country %></td>
        <td><%= player.competition %></td>
        <td><%= player.tier %></td>
        <td><%= player.contract_status %></td>
        <td><%= player.ending_contract %></td>
        <td><%= player.agent %></td>
        <td><%= player.social_face %></td>
        <td><%= player.social_twit %></td>
        <td><%= player.social_insta %></td>
        <td><%= player.international %></td>
        <td><%= player.youtube_links %></td>
        <td><%= link_to 'Show', player %></td>
        <td><%= link_to 'Edit', edit_player_path(player) %></td>
        <td><%= link_to 'Destroy', player, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

